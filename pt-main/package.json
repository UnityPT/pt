{
  "name": "pt",
  "version": "1.1.0",
  "description": "",
  "keywords": [],
  "author": "nanamicat",
  "license": "AGPLv3",
  "type": "module",
  "main": "dist/main/bundle.cjs",
  "scripts": {
    "start": "webpack --mode development && electron .",
    "build": "webpack --mode production",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "upload": "npm run build && electron-builder --publish always"
  },
  "dependencies": {
    "ssh2": "^1.11.0"
  },
  "devDependencies": {
    "create-torrent": "git+ssh://git@github.com:nanamicat/create-torrent#patch-1",
    "glob": "^9.3.4",
    "typed-struct": "^2.3.0",
    "@types/ssh2": "^1.11.6",
    "@types/tough-cookie": "^4.0.2",
    "copy-webpack-plugin": "^11.0.0",
    "electron": "23.2.1",
    "electron-builder": "^24.0.0-alpha.12",
    "electron-store": "^8.1.0",
    "electron-updater": "^5.3.0",
    "tough-cookie": "^4.1.2",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.3",
    "webpack-cli": "^5.0.1"
  },
  "build": {
    "productName": "UnityPT",
    "appId": "com.upt.upt",
    "npmRebuild": false,
    "files": [
      "dist/main",
      "dist/pt-web",
      "package.json"
    ],
    "win": {
      "verifyUpdateCodeSignature": false
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "publish": {
      "provider": "s3",
      "endpoint": "https://ptdl.lolo.moe",
      "bucket": "unity-pt",
      "path": "downloads"
    }
  }
}
